<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_pantry"
        android:layout_width="match_parent"
        android:layout_height="255dp"

        android:background="@drawable/rounded_bg">

        <ImageView
            android:id="@+id/pantry_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="center"
            android:src="@drawable/fries"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/item_name_pantry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:text="Item name"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pantry_image"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/condition_pantry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Condition"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginTop="-9dp"
            app:layout_constraintStart_toStartOf="@+id/item_name_pantry"
            app:layout_constraintTop_toBottomOf="@+id/item_name_pantry" />

        <TextView
            android:id="@+id/publisher_pantry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="By User"
            android:layout_marginTop="-5dp"
            android:textColor="@color/grey"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/item_name_pantry"
            app:layout_constraintTop_toBottomOf="@+id/condition_pantry" />

        <TextView
            android:id="@+id/request_button"
            android:layout_width="86dp"
            android:layout_height="32dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/request_outline"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="REQUEST"
            android:textColor="@color/green"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>